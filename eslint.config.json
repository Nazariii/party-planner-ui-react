{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "commonjs": true,
    "es6": true
  },

  "rules": {
    "no-console": 0,
    "semi": 2
  },

  "globals": {
    "jQuery": true,
    "$": true
  },

  "plugins": [
    "react"
  ],

  "settings": {
    "react": {
      "pragma": "React",
      "version": "0.13.3"
    }
  },

  "extends": ["eslint:recommended", "plugin:react/recommended"]
}